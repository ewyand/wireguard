#!/bin/vbash

# wg genkey | tee /config/auth/wg.key | wg pubkey >  /config/auth/wg.public

configure

set interfaces wireguard wg0 address 10.255.255.1/24
set interfaces wireguard wg0 listen-port 51820
set interfaces wireguard wg0 route-allowed-ips true
set interfaces wireguard wg0 private-key /config/auth/wg.key

set firewall name WAN_LOCAL rule 120 action accept
set firewall name WAN_LOCAL rule 120 protocol udp
set firewall name WAN_LOCAL rule 120 description 'WireGuard'
set firewall name WAN_LOCAL rule 120 destination port 51820

set system package repository stretch components 'main contrib non-free' 
set system package repository stretch distribution stretch
set system package repository stretch url http://http.us.debian.org/debian


commit
exit
